  {
    "name": "Collage_X",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "default": "Title",
        "label": "Collage Heading"
      },
      {
        "type": "text",
        "id": "title_descrptn",
        "default": "Details",
        "label": "Collage Details"
      }
    ],
    "blocks": [
     {
       "name": "Heading",
       "type": "text",
       "settings": [
         {
           "type": "image_picker",
           "id": "img",
           "label": "Collage Images"
         },
         {
           "type": "text",
           "id": "left_text",
           "label": "img description"
         },
         {
           "type": "text",
           "id": "left_paragraph",
           "label": "Slide Text"
         },
         {
           "type": "image_picker",
           "id": "img_up-left",
           "label": "up right img"
         },
         {
           "type": "text",
           "id": "up-left_desc",
           "label": "Right Slide Text"
         },
         {
           "type": "text",
           "id": "up-left_paragraph",
           "label": "Right Slide Text"
         },
         {
           "type": "image_picker",
           "id": "img_right_clg",
           "label": "up right img"
         },
         {
           "type": "text",
           "id": "up_right_text",
           "label": "Right Slide Text"
         },
         {
           "type": "text",
           "id": "up_right_paragraph",
           "label": "Right Slide Text"
         },
         {
           "type": "image_picker",
           "id": "imageee",
           "label": "down img"
         },
         {
           "type": "text",
           "id": "down_text",
           "label": "Down Slide Text"
         },
         {
           "type": "text",
           "id": "down_paragraph",
